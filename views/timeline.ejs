<%- include('partials/header')%>
  <!--  -->
  <%- include('partials/nav')%>
    <!--  -->
    <div class=" rounded-xl w-[80%] py-[2%]  m-auto flex  flex-wrap">
      <!-- <h1 class="text-center text-8xl font-extrabold text-red-400">This is profile page</h1> -->

      <% user.posts.forEach(function(post){ %>  
        <div class="card w-[23%]  mr-5 mb-5">
            <div class="flex  items-center mb-2">
                <img class="w-[7vh] h-[7vh] rounded-full object-cover" src="/images/<%= user.profilepic %>" alt="">
                <div class="ml-3">
                    <h1 class="text-xl font-bold"><%= user.name %></h1>
                    <small class="text-zinc-600">
                        <%= post.createdAt.toLocaleTimeString() %>
                        <%= post.createdAt.toLocaleDateString() %>
                    </small>
                   
                </div>
            </div>
            <img class="w-full h-[40vh] object-cover" src="/images/<%= post.media %>" alt="">
            <div class="flex justify-between items-center mt-1">
                <div class="items-center flex  mt-1 ">
                    <span class="text-md mr-2">
                        <%= post.like.length %>
                    </span>
                    <a class="text-2xl" href="/like/<%= post._id %>">
                       <% if(post.like.includes(user._id ) ) {  %> 
                            <i class="text-red-300 ri-heart-fill"></i>    
                       <% }else{  %> 
                            <i class="ri-heart-line"></i>
                       <% } %> 
                    </a>
                    <!-- <i class="ri-chat-3-line"></i> -->
                </div>
                <div class="text-2xl">
                    <a href="/updatepost/<%= post._id %>" class="text-blue-300 ri-edit-box-line"></a>
                    <a href="/deletepost/<%= post._id %>" class="text-red-300 ri-delete-bin-4-line"></a>
                </div>
    
            </div>
          </div>
      <% }) %>

     
      
      
    </div>

    
    <!--  -->
    <%- include('partials/footer')%>